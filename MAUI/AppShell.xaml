<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:MAUI.View"
       x:Class="MAUI.AppShell" 
       BackgroundColor="#512BD4"
       Shell.TitleColor="White"
       Shell.DisabledColor="#B4B4B4"
       Shell.ForegroundColor="White"
       Shell.TabBarBackgroundColor="#512BD4"
       Shell.TabBarForegroundColor="White"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="#95A5A6">
    
    <TabBar>
        <ShellContent Title="Terms" Icon="icon_monkeys.png" Route="terms" ContentTemplate="{DataTemplate view:TermsPage}" />
        <ShellContent Title="Courses" Icon="icon_elephants.png" Route="courses" ContentTemplate="{DataTemplate view:CoursesPage}" />
        <ShellContent Title="Instructors" Icon="icon_bears.png" Route="instructors" ContentTemplate="{DataTemplate view:InstructorsPage}" />
    </TabBar>
    <ShellContent Title="About" Icon="icon_about.png" Route="Test" ContentTemplate="{DataTemplate view:LoaderPage}" />
</Shell>