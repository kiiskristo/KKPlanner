<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:MAUI.View"
       x:Class="MAUI.AppShell" 
       BackgroundColor="#512BD4"
       Shell.TitleColor="White"
       Shell.DisabledColor="#B4B4B4"
       Shell.ForegroundColor="White"
       Shell.TabBarBackgroundColor="#512BD4"
       Shell.TabBarForegroundColor="White"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="#95A5A6">
    <TabBar>
        <ShellContent Title="Terms" Route="terms" ContentTemplate="{DataTemplate view:TermsPage}" />
        <ShellContent Title="Courses" Route="courses" ContentTemplate="{DataTemplate view:CoursesPage}" />
        <ShellContent Title="Instructors" Route="instructors" ContentTemplate="{DataTemplate view:InstructorsPage}" />
        <Tab Title="Reports" >
            <ShellContent Title="Grades" Route="reports1" ContentTemplate="{DataTemplate view:ReportsPage}" />
            <ShellContent Title="Courses" Route="reports2" ContentTemplate="{DataTemplate view:ReportsPage}" />
            <ShellContent Title="Assessments" Route="reports3" ContentTemplate="{DataTemplate view:ReportsPage}" />
        </Tab>
    </TabBar>
    <ShellContent Title="Login" Route="Login" ContentTemplate="{DataTemplate view:LoginPage}" />
</Shell>